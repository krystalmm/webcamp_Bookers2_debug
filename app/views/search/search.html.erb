<div class="container">
  <div class="row">
    <div class="search-list col-12">
      <h2><%= @model %>s search for "<%= @content %>"</h2>
      <% if @model == 'User' %>
        <table class="table">
          <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
          </thead>
          <tbody>
            <% @datas.each do |user| %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg") %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% elsif @model == 'Book' %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @datas.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag(book.user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg") %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>