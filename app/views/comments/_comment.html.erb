<div class="d-flex align-items-center">
  <%= link_to user_path(book_comment.user) do %>
    <%= attachment_image_tag(book_comment.user, :profile_image, size: "100x100", fallback: "no-image-icon.jpg") %><br>
    <%= book_comment.user.name %>
  <% end %>
  <p><%= book_comment.comment %></p>
  <% if book_comment.user == current_user %>
    <p><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-sm btn-danger ml-3' %></p>
  <% end %>
</div>